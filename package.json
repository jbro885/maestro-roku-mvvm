{
  "name": "maestro-roku-mvvm",
  "version": "0.2.6",
  "description": "A development platform for building roku channels in brighterscript. MVVM Library",
  "directories": {
    "doc": "docs"
  },
  "files": [
    "dist/**/!(manifest)*",
    "!roku_modules"
  ],
  "dependencies": {
    "log": "file:../../roku-log/roku-log",
    "mc": "file:../maestro-roku-core",
    "mioc": "file:../maestro-roku-ioc",
    "mv": "file:../maestro-roku-view"
  },
  "devDependencies": {
    "brighterscript": "^0.23.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/georgejecook/maestro-roku-mvvm.git"
  },
  "keywords": [
    "ropm",
    "brightscript",
    "mvvm",
    "framework",
    "fun"
  ],
  "author": "George Cook",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/georgejecook/maestro-roku-mvvm/issues"
  },
  "homepage": "https://github.com/georgejecook/maestro-roku-mvvm#readme",
  "ts-node": {
    "transpileOnly": true,
    "compileOptions": {
      "incremental": true,
      "allowJs": false
    }
  },
  "ropm": {
    "rootDir": "src",
    "packageRootDir": "dist",
    "prefixMatching": "expanded"
  },
  "scripts": {
    "build": "npx bsc",
    "test": "cd tests && npx ropm copy && bsc --project ./bsconfig.json"
  }
}
